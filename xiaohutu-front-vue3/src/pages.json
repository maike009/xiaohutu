{
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "onReachBottomDistance": 50
      }
    },
    {
      "path": "pages/user/user",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationStyle": "default",
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/postDetail/postDetail",
      "style": {
        "navigationBarTitleText": "",
        "navigationStyle": "default"
      }
    },
    {
      "path": "pages/postAdd/postAdd",
      "style": {
        "enablePullDownRefresh": false,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/addPost/addPost",
      "style": {
        "navigationBarTitleText": "",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/editUser/editUser",
      "style": {
        "navigationBarTitleText": "编辑",
        "navigationStyle": "default"
      }
    },
    {
      "path": "pages/userDetail/userDetail",
      "style": {
        "navigationBarTitleText": "",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/systemHelp/systemHelp",
      "style": {
        "navigationBarTitleText": "帮助"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#333",
    "selectedColor": "#27ba9b",
    "backgroundColor": "#fff",
    "borderStyle": "white",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/index/index",
        "iconPath": "static/tabs/home.png",
        "selectedIconPath": "static/tabs/home_selected.png"
      },
      {
        "text": "",
        "pagePath": "pages/postAdd/postAdd",
        "iconPath": "static/tabs/add_default.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/user/user",
        "iconPath": "static/tabs/user.png",
        "selectedIconPath": "static/tabs/user_selected.png"
      }
    ]
  }
}
